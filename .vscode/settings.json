{
    "clangtidy.sourcePath": "${workspaceFolder};main;components/board_configs;components/leds;",
    "clangtidy.buildPath": "${workspaceFolder}/build",
    "clangtidy.parallelTasks": 8,
    "C_Cpp.clang_format_style": "file",
    "C_Cpp.intelliSenseEngineFallback": "Disabled",
    "editor.formatOnSave": false,

    "doxdocgen.generic.authorName": "Marco A. G. Maia",
    "doxdocgen.generic.useGitUserEmail": true,
    "doxdocgen.generic.briefTemplate": "@brief {text}",
    "doxdocgen.file.copyrightTag": [
        "@copyright Copyright (c) {year}"
    ],

    "files.associations": {
        "cstdio": "cpp",
        "ble_hs.h": "c",
        "ctime": "cpp",
        "type_traits": "cpp"
    },
    "C_Cpp.errorSquiggles": "Enabled",
    "idf.adapterTargetName": "esp32"
}